@page
@model BankDeposits.Razor.Pages.Accounts.AccountsIndexPageModel

@{
    ViewData["Title"] = "Accounts List";
}

<h1 class="display-4 mb-4">@ViewData["Title"]</h1>

<a asp-page="Create" class="btn btn-primary mb-3">Create New</a>

<div class="container mt-3">
    <table class="table table-striped table-responsive-md table-hover shadow">
        <thead class="thead-dark">
        <tr>
            <th> Id </th>
            <th>Owner Id</th>
            <th>Balance</th>
            <th>Number</th>
            <th>Total Profit</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var account in Model.Accounts)
        {
            <tr>
                <td>@account.Id</td>
                <td>@account.OwnerId</td>
                <td>@account.Balance</td>
                <td>@account.Number</td>
                <td>@account.TotalProfit</td>
                <td>
                    <a asp-page="./Details" asp-route-id="@account.Id" class="btn btn-primary">See more</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>