@page "{id:guid}"
@model BankDeposits.Razor.Pages.Accounts.AccountDetailsPageModel

@{
    ViewData["Title"] = "Details";
}

<h1>@ViewData["Title"]</h1>

<div class="container mb-3">
    <div class="row">
        <dl class="dl-horizontal">
            <dt> @Html.DisplayNameFor(model => model.Account.Id) </dt>
            <dd> @Html.DisplayFor(model => model.Account.Id) </dd>
            <dt> @Html.DisplayNameFor(model => model.Account.OwnerId) </dt>
            <dd> @Html.DisplayFor(model => model.Account.OwnerId) </dd>
            <dt> @Html.DisplayNameFor(model => model.Account.Number) </dt>
            <dd> @Html.DisplayFor(model => model.Account.Number) </dd>
            <dt> @Html.DisplayNameFor(model => model.Account.Balance) </dt>
            <dd> @Html.DisplayFor(model => model.Account.Balance) </dd>
            <dt> @Html.DisplayNameFor(model => model.Account.TotalProfit) </dt>
            <dd> @Html.DisplayFor(model => model.Account.TotalProfit) </dd>
        </dl>
    </div>

    <div class="row">
        <div class="col-md-4">
            <a asp-page="Edit" asp-route-id="@Model.Account.Id" class="btn btn-primary">Edit</a>
            <a asp-page="Index" class="btn btn-primary">Back to List</a>

            <form method="post" asp-page-handler="Delete" asp-route-id="@Model.Account.Id" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>